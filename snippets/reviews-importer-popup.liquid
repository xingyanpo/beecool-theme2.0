<script>
  var blockReviewPop= (typeof blockReviewPop == "undefined" || blockReviewPop == null) ? `{{ shop.metafields.scm_review_importer.review_pop }}` : blockReviewPop;
</script>
<div id="scm-reviews-shopSetting" data-shop='{{ shop.metafields.scm_review_importer.shop_info_setting | json}}'></div>
{%- if content_for_header contains 'd1bu6z2uxfnay3.cloudfront.net' -%}
    {% if shop.metafields.scm_review_importer.shop_info_setting['popEnabled'] %}
        <link rel="stylesheet" href="https://d1bu6z2uxfnay3.cloudfront.net/css-version-11/assets/css/scm-review-importer-pop-rv.css?version={{ shop.metafields.scm_review_importer.shop_info_setting['version'] }}" media="print" onload="this.media='all'; this.onload=null;">
        <div id="lai-reviewPop" style="display: none;" class="popup-reviews" data-template={{ template | split: '.' | first }}>
            <button id="scm-close" class="scm-close-popup" aria-label="Close a popup">
            </button>
            <div id="content-rv">
            </div>
        </div>
        <script src="https://d1bu6z2uxfnay3.cloudfront.net/js/frontend/version-11/reviewsPopRv.min.js?version={{ shop.metafields.scm_review_importer.shop_info_setting['version'] }}" defer></script>
    {% endif %}
    <script src="{{ 'reviews-importer.js' | asset_url }}" async></script>
{% endif %}
<div id="scm-review-importer-popup" style="display: none;">
    <div class="scm-popup-before"></div>
    <div class="scm-popup-content">
        <iframe id="scm-review-importer-popup-iframe" height="700px" width="100%" title="Sma reviews popup"></iframe>
    </div>
</div>
<div id="scm-review-importer-popup-write-review" style="display: none;">
    <div class="scm-popup-before"></div>
    <div class="scm-popup-content">
        <iframe id="scm-review-importer-popup-write-review-iframe" height="700px" width="100%" title="Sma popup write reviews"></iframe>
    </div>
</div>
