
  <div class="index-service-swiper-container">
    <div class="container">
      <h2 class="title" >
        {{section.settings.title}}
      </h2>
      <div class="description">
        {{section.settings.description}}
      </div>
      <div class="pc">
        <div class="swiper serviceSwiper">
          <div class="swiper-wrapper">
            {% for item in section.blocks %}
              <div class="swiper-slide">
                  <a href="{{item.settings.link}}">
                    <div class="index-service_box">
                        <img src="{{item.settings.slideImage | img_url: '1920x'}}" alt="{{ item.settings.slideImage.alt }}">
                        <div class="tips">
                          <div class="title">{{item.settings.slideTitle}}</div>
                          <div class="item-description">

                            <span>{{item.settings.subtitle}}</span>
                          </div>
                        </div>
                    </div>
                      
                  </a>
              </div>
            {% endfor %}
          </div>
          <!-- 如果需要分页器 -->
          <div class="swiper-pagination"></div>
        </div>
      </div>
      <div class="mobile">
        <div class="swiper serviceMObileSwiper">
          <div class="swiper-wrapper">
            {% for item in section.blocks %}
              <div class="swiper-slide">
                <a href="{{item.settings.link}}">
                    <div class="index-service_box">
                        <img src="{{item.settings.slideImage_mobile | img_url: '1920x'}}" alt="{{ item.settings.slideImage_mobile.alt }}">
                        <div class="tips">
                          <div class="title">{{item.settings.slideTitle}}</div>
                          <div class="item-description">
                      
                            <span>{{item.settings.subtitle_mobile}}</span>
                          </div>
                        </div>
                    </div>
                      
                  </a>
              </div>
            {% endfor %}
          </div>
          <!-- 如果需要分页器 -->
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    (()=>{
      var swiper = new Swiper('.serviceSwiper', {
        breakpoints: { 
                768: {  //当屏幕宽度大于等于768 
                  spaceBetween: 90,
                  slidesPerView: 2.25,
                },
                1200:{
                  spaceBetween: 90,
                  slidesPerView: 2.26,
                },
                1447:{
                  spaceBetween: 120,
                  slidesPerView: 2.25,
                },
                1593: {  //当屏幕宽度大于等于1280
                  spaceBetween: 150,
                  slidesPerView: 2.24,
                },
                1670:{
                  spaceBetween: 160,
                  slidesPerView: 2.24,
                },
                1800:{
                  spaceBetween: 160,
                  slidesPerView: 2.25,
                },
                1921:{
                  spaceBetween: 210,
                  slidesPerView: 2.25,
                }
        },
          effect: "coverflow",
          grabCursor: true,
          centeredSlides: true,
          loop: true,
          coverflowEffect: {
              rotate: 0,
              stretch: 0,
              depth: 350,
              modifier: 1,
              slideShadows: false,
          },
          pagination: {
              el: ".swiper-pagination",
              clickable: true,
          },
      });

      // mobile
      var swiper = new Swiper('.serviceMObileSwiper', {
      
        pagination: {
              el: ".swiper-pagination",
              clickable: true,
          },
        breakpoints: { 
            300: {  //当屏幕宽度大于等于768 
              spaceBetween: 30,
              slidesPerView: 1.3,
            },
            768: {  //当屏幕宽度大于等于768 
              spaceBetween: 30,
              slidesPerView: 2.3,
            }
        },
    });
    })()
  </script>

