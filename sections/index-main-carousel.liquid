{{ 'index-main-carousel.css' | asset_url | stylesheet_tag }}
<div class="index_mainCarousel_all" >
    <div class="swiper MainCarouselSwiper">
        <div class="swiper-wrapper">
            {%- for block in section.blocks-%}
                <div class="swiper-slide">
                    <a href="{{block.settings.link}}" class="index_mainCarousel_img">
                     <img loading="lazy" {% render 'image-attributes' , image: block.settings.img %}>
                     <div class="index_mainCarousel_position container" style="">
                        <div class="index_mainCarousel_title">
                           {{block.settings.title}}
                        </div>
                        <div class="index_mainCarousel_text">
                            {{block.settings.text}}
                         </div>
                         <div class="index_mainCarousel_svg">
                            {{block.settings.svg}}
                         </div>
                     </div>
                    </a>
                </div>
            {%- endfor-%}
        </div>  
    </div>
</div>
  <script>
    (()=>{
        var swiper1 = new Swiper(".MainCarouselSwiper", {
            pagination: {
                el: ".swiper-pagination",
                type: "fraction",
            },
            navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
            },
       
        
      });
    })()
  
  </script>
  {% schema %}
{
    "name": "Main Carousel",
    "class":"MainCarousel",
    "settings": [
      
    ],
    "blocks":[
    {
        "type": "main-carousel",
        "name": "Main Carousel",
        "settings": [
        {
            "type": "image_picker",
            "id": "img",
            "label": "img"
        },
        {
            "type": "richtext",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "text"
        },
        {
            "type": "textarea",
            "id": "svg",
            "label": "svg"
        },
        {
            "type": "url",
            "id": "link",
            "label": "link"
            
        }
            
        ]
      }
    ],
    "presets": [
        {
            "name": "Main Carousel"
        }
    ]
}
{% endschema %}
 