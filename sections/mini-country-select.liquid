<style>
  .mini-country-select {
    z-index: 999;
    position: fixed;
    left: 40px;
    bottom: 40px;
  }
  .mini-country-select-wrap {
    position:relative;
  }
  .cover-img {
    width: 70px;
    height: 70px;
    border-radius:50%;
    overflow:hidden;
    box-shadow: 0 0 2px 2px rgb(0 0 0 / 10%);
    cursor:pointer;
  }
  .cover-img > img {
    width: 100%;
    height: 100%;
    object-fit:cover;
  }
  .show-country {
    width: 200px;
    border-bottom: 2px solid #2a408e;
    position: absolute;
    bottom: 100%;left: 0;
    background-color: #FFF;
    padding:6px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
    visibility: hidden;
    transition: all 500ms cubic-bezier(0.2, 0.06, 0.05, 0.95);
  }
</style>

<div class="mini-country-select">
  <div class="mini-country-select-wrap">
    <div class="cover-img">
      <img src="https://cdn.shopifycdn.net/s/files/1/0730/5969/6953/files/ca.svg?v=1677572062" alt="">
    </div>
    <div class="show-country"></div>
  </div>
</div>

