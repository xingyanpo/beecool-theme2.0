<style>
  .mini-country-select {
    z-index: 999;
    position: fixed;
    left: 20px;
    bottom: 20px;
    display:none;
  }
  .mini-country-select-wrap {
    position:relative;
  }
  .cover-img {
    width: 50px;
    height: 50px;
    border-radius:50%;
    overflow:hidden;
    box-shadow: 0 0 2px 2px rgb(0 0 0 / 10%);
    cursor:pointer;
  }
  .cover-img > img {
    width: 100%;
    height: 100%;
    object-fit:cover;
  }
  .show-country {
    width: 200px;
    border-bottom: 2px solid #2a408e;
    position: absolute;
    bottom: 100%;left: 0;
    background-color: #FFF;
    padding:3px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
    transition: height 800ms cubic-bezier(0.2, 0.06, 0.05, 0.95);
    visibility: hidden;
    height: 0;
    overflow:hidden;
  }
  .country-item > a {
    display: flex;
    align-items: center;
    cursor:pointer;
  }
  .country-item > a > img {
    width: 28px;
  }
  .country-item > a > .country-name {
    padding-left: 10px;
    font-size: 18px;
  }
  .mini-country-select-wrap:hover > .show-country {
    visibility: visible;
    height: 100%;
  }
  .show-country:hover {
    visibility: visible;
  }
  @media screen and (max-width: 768px) {
    .mini-country-select {
      display:block;
    }
  }
</style>

<div class="mini-country-select">
  <div class="mini-country-select-wrap">
    <div class="cover-img">
      <img src="https://cdn.shopifycdn.net/s/files/1/0730/5969/6953/files/ca.svg?v=1677572062" alt="">
    </div>
    <div class="show-country">
       <div class="country-item">
           <a href="https://beecoolbikes.com">
            <img src="https://cdn.shopify.com/s/files/1/0730/5969/6953/files/us_1.svg?v=1677573763">
            <span class="country-name">United States</span>
           </a>
          </div>
    </div>
  </div>
</div>

