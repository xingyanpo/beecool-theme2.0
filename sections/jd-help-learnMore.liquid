{{ 'jd-help-learnMore.css' | asset_url | stylesheet_tag }}
<div class="help-learnMore_all container">
        <div class="help-learnMore_title ebike_h1">{{section.settings.title}}</div>
        <div class="help-learnMore_top">
            {% for block in section.blocks %}
                <div class="help-learnMore_box">
                
                        <div class="help-learnMore_box_img">
                            <img src="{{block.settings.img | img_url :'1920x'}}" alt="block.settings.img.alt">
                        </div>
                        <div class="help-learnMore_box_position">
                            <div class="help_learnMore_box_svg">
                                <div class="help-learnMore_box_text">
                                    <div>{{block.settings.text}}</div>
                                </div>
                            </div>
                         
                            <div class="help-learnMore_box_title">{{block.settings.title}}</div>
                            <div class="help-learnMore_box_content">{{block.settings.content}}</div>
                            <a href="{{block.settings.link}}" class="help-learnMore_box_link">{{block.settings.button}}</a>
                        </div>
                
                </div>
            {% endfor %}
        </div>
        
</div>

