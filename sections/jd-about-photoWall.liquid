    "name": "photoWall",
    "class":"photoWall",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "text"
        },
        {
            "type": "richtext",
            "id": "button",
            "label": "button"
        },
        {
            "type": "url",
            "id": "link",
            "label": "link"
            
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "img"
        },
        {
            "type": "image_picker",
            "id": "img_right",
            "label": "right img"
        }
    ],
    "blocks":[
        {
            "type": "photoTop",
            "name": "photoTop",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "img"
