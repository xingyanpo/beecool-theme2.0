<div class="Blog_setion_all">
  <nav aria-label="{{ 'general.breadcrumb.title' | t }}" class="blog_nav">
    <div class="container">
     <ol class="breadcrumb__list" role="list">
         <li class="breadcrumb__item">
           <a class="breadcrumb__link" href="{{ routes.root_url }}">{{ 'general.breadcrumb.home' | t }}</a>
         </li>

         <li class="breadcrumb__item">
           {%- if current_tags -%}
             <a class="breadcrumb__link" href="{{ blog.url }}">{{ blog.title }}</a>
           {%- else -%}
             <span class="breadcrumb__link" aria-current="page">{{ blog.title }}</span>
           {%- endif -%}
         </li>

         {%- if current_tags -%}
           <li class="breadcrumb__item">
             <span class="breadcrumb__link" aria-current="page">{{ current_tags.first | split: '_' | last }}</span>
           </li>
         {%- endif -%}
       </ol>
    </div>
 </nav>
    <div class="Blog_setion_top">
        <section class="exhibition-page container">
            {% for block in section.blocks %}
            {% if block.settings.link !=blank %}
                <div class="exhibition-page__item" style="background-image: url({{block.settings.img | img_url: '1920x'}});">
                  <div class="blogs_video" style="display: none;">
                    {{ block.settings.link | strip}}
                  </div>
                  <div class="blogs_Box_position">
                      <a href="{{block.settings.article.url}}">
                        {% if block.settings.article.tags.first !=blank %}
                          <div class="blogs_Box_text">
                            <div>{{block.settings.article.tags.first}}</div>
                          </div>
                        {% endif %}
                          <div class="blogs_Box_title">{{block.settings.article.title}}</div>
                          <div class="blogs_Box_content">{{block.settings.article.published_at | time_tag: format: 'month_day_year'}}</div>
                      </a>
          
                    
                      <div class="blogs_video_button">
