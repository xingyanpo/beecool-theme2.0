                      </div>
                     
                    </div>
                </div>
                {% else %}
                <div class="exhibition-page__item" style="background-image: url({{block.settings.img | img_url: '1920x'}});">
                  <div class="blogs_video" style="display: none;">
                    {{ block.settings.link}}
                  </div>
                  <a href="{{block.settings.article.url}}" class="blogs_Box_position">
                    <div>
                      <div class="blogs_Box_text">
                          <div>{{block.settings.article.tags.first}}</div>
                      </div>
                      <div class="blogs_Box_title">{{block.settings.article.title}}</div>
                      <div class="blogs_Box_content">{{block.settings.article.published_at | time_tag: format: 'month_day_year'}}</div>
                    </div>
                  </a>
                </div>
            {% endif %} 
            {% endfor %}
            
        </section>  
    </div>
   
</div>
<div class="swi_video_fixed">
    <div class="video_mid_cha">x</div>
    <video data-component="responsive-video"
    class="responsive-videos" preload="auto" webkit-playsinline playsinline
    controls
    src=""
    >
  </video>
</div>
<div class="bg-color"></div>

<script>
	(()=>{
    let widthSize = document.documentElement.clientWidth;
      if(widthSize>999){
      // 图片大小
      $(".exhibition-page__item:eq(0)").css("width","85%");

      $(".exhibition-page .exhibition-page__item").mouseover(function(){

          $(this).css("width","85%");
          $(this).siblings().css("width","50%");

      })	
    }
     
        // 弹窗视频
        $(".blogs_video_button").click(function () {
            $(".swi_video_fixed").show();
            // 获取当前点击的src
            $(this).parent().parent().find(".blogs_video").html();
            var viveoPC = $(this).parent().parent().find(".blogs_video").html();
          
          
            $(".swi_video_fixed").children(".responsive-videos").attr("src",viveoPC.trim())
            $(".swi_video_fixed").children(".responsive-videos")[0].play();
           
           
            $(".no-focus-outline").addClass("adlink-html");
            $(".bg-color").addClass("bg-colors");

          
           
        })
        $(".video_mid_cha").click(function(){
            $(".swi_video_fixed").hide();
            $(".no-focus-outline").removeClass("adlink-html");
            $(".swi_video_fixed").children(".responsive-videos")[0].load();
            $(".bg-color").removeClass("bg-colors")
        })
   
       
    })()




</script>

